{
  "name": "rude-ui",
  "version": "0.9.0",
  "description": "",
  "main": "dist/index.js",
  "module": "dist/index.es5.js",
  "types": "dist/lib/index.d.ts",
  "scripts": {
    "commit": "git-cz",
    "prebuild": "rm -rf dist",
    "build": "tsc --module commonjs && rollup -c",
    "lint": "tslint -c tslint.json -p tsconfig.json 'src/**/*.{ts,tsx}'",
    "test": "jest --watch",
    "start": "docz dev",
    "docz:build": "docz build",
    "analyze": "npm run size -- --why",
    "prettier:check": "prettier --check 'src/**/*.{ts,tsx,mdx}'",
    "validate": "run-s validate:tests lint prettier:check",
    "validate:tests": "jest",
    "prerelease": "git checkout master && git pull --tags origin master && run-s validate docz:build && git-authors-cli && git add .",
    "release": "standard-version -a",
    "postrelease": "run-s release:*",
    "release:tags": "git push --follow-tags origin master",
    "release:github": "export $(cat .env | xargs) && conventional-github-releaser -p angular",
    "prepublishOnly": "run-s validate build",
    "now-build": "yarn docz:build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rudeayelo/rude-ui.git"
  },
  "bugs": {
    "url": "https://github.com/rudeayelo/rude-ui/issues"
  },
  "homepage": "https://github.com/rudeayelo/rude-ui#readme",
  "keywords": [],
  "author": "Rude Ayelo <me@rude.works> (http://rude.works)",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{mdx,ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "latest",
    "@commitlint/config-conventional": "latest",
    "@types/color": "3.0.0",
    "@types/jest": "24.0.11",
    "@types/react": "16.8.8",
    "@types/react-dom": "16.8.3",
    "@types/rollup-plugin-commonjs": "9.2.0",
    "@types/rollup-plugin-node-resolve": "4.0.0",
    "@types/rollup-plugin-sourcemaps": "0.4.1",
    "@types/styled-components": "4.1.12",
    "@types/styled-system": "4.0.0",
    "color": "3.1.0",
    "commitizen": "latest",
    "conventional-github-releaser": "latest",
    "docz": "1.0.0-rc.3",
    "docz-theme-default": "1.0.0-rc.3",
    "eslint": "5.15.3",
    "eslint-config-unobtrusive": "1.2.2",
    "git-authors-cli": "latest",
    "husky": "latest",
    "jest": "24.5.0",
    "jest-dom": "3.1.3",
    "lint-staged": "8.1.5",
    "npm-run-all": "4.1.5",
    "prettier": "1.16.4",
    "react": "16.8.5",
    "react-docgen-typescript-loader": "3.0.1",
    "react-dom": "16.8.5",
    "react-testing-library": "6.0.3",
    "rollup": "1.7.3",
    "rollup-plugin-babel-minify": "8.0.0",
    "rollup-plugin-commonjs": "9.2.2",
    "rollup-plugin-node-resolve": "4.0.1",
    "rollup-plugin-sourcemaps": "0.4.2",
    "rollup-plugin-typescript2": "0.20.1",
    "standard-version": "5.0.2",
    "styled-components": "4.2.0",
    "styled-icons": "7.7.0",
    "styled-map": "3.2.0-rc.1",
    "styled-system": "4.0.8",
    "ts-jest": "latest",
    "ts-loader": "5.3.3",
    "tslint": "5.14.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-react": "4.0.0",
    "typescript": "3.3.4000"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0",
    "styled-components": ">=4.0.0",
    "styled-system": ">=3.2.0"
  },
  "contributors": [
    "Rude <rude.ayelo@xing.com>"
  ],
  "dependencies": {
    "deepmerge": "3.2.0"
  }
}
